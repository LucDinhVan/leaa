DEMO_MODE=false
DEBUG_MODE=true

SERVER_NAME=leaa
SERVER_PROTOCOL=http
SERVER_PORT=5000
SERVER_HOST=localhost
PUBLIC_DIR=public

TRUST_PROXY=loopback
JWT_SECRET_KEY=xxxx

# CLIENT_COOKIE_USELESS_NOW!
# (60 * 60 * 24) * 7d = 604800
# (60 * 60 * 24) * 30d = 2592000
# (60 * 60 * 24) * 180d = 15552000
CLIENT_COOKIE_EXPIRES_SECOND=0
SERVER_COOKIE_EXPIRES_SECOND=2592000

DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=prod_api
DB_SYNCHRONIZE=true

# 5 * 60 * 1000 = 300000 -> 5min
RATELIMIT_WINDOWMS=300000
RATELIMIT_MAX=500

ENABLE_CAPTCHA_BY_LOGIN_FAILD_TIMES=5

# 404 | mp | identicon | monsterid | wavatar | retro | robohash | blank
GRAVATAR_TYPE=monsterid

ATTACHMENT_DIR=attachments
ATTACHMENT_LIMIT_SIZE_MB=5
ATTACHMENT_SAVE_IN_LOCAL=true

# ‚ö†Ô∏è if `true`, You need to `Aliyun OSS` setting `CORS`, and Enable `AliyunOSSFullAccess` in `RAM` First.
