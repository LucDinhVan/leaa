{% extends "../_layouts/master.layout.njk" %}



{% block headStyle %}
  <style>
    .article-pagination {
      margin-top: 20px;
      text-align: center;
      font-size: 1.6em;
      font-weight: bold;
    }

  </style>
{% endblock %}

{% block layoutContainer %}

  {% for item in list.data %}
    <a href="/a/{{ item.id }}">
      <h2>{{ item.title }}</h2>
    </a>
    <h3>{{ item.slug }}</h3>
    <p>{{ item.content }}</p>

    {% if item.tags | length %}
      <div class="article-tags">
        &nbsp;Tags:
        {% for tag in item.tags %}
          <span>{{ tag.name }}</span>
        {% endfor %}
      </div>
    {% endif %}

    {% if item.tags | length %}
      <div class="article-tags">
        Cates:
        {% for category in item.categories %}
          <span>{{ category.name }}</span>
        {% endfor %}
      </div>
    {% endif %}
    <hr>
  {% endfor %}


  <div class="article-pagination">
    {% include "../_components/pagination.component.njk" %}
  </div>

{% endblock %}
