{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "_build",
    "allowJs": false,
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "paths": {
      "@leaa/common/*": ["../_leaa-common/*"],
      "@leaa/dashboard/*": ["./*"]
    }
  },
  "include": ["src/**/*", "typings/*"],
  "exclude": [
    "node_modules",
    //
    "/.cache",
    "/_cache",
    "/cache",
    //
    "/.build",
    "/_build",
    "/build",
    //
    "/.dist",
    "/_dist",
    "/dist",
    //
    "/.deploy",
    "/_deploy",
    "/deploy"
  ]
}
