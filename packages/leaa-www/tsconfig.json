{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "_build",
    "module": "ESNext",
    "target": "ES2018",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "allowJs": false,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@leaa/common/*": ["../_leaa-common/*"],
      "@leaa/www/*": ["./*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src", "test", "typings", "index.ts", "index.js", "server.ts", "server.js"]
}
