{
  "name": "root",
  "author": "solidzoro@live.com",
  "version": "1.0.0",
  "private": true,
  "sideEffect": false,
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.4.0"
  },
  "homepage": "https://github.com/SolidZORO/leaa",
  "bugs": {
    "url": "https://github.com/SolidZORO/leaa/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/module-alias",
      "**/next-bundle-analyzer"
    ]
  },
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "conventionalCommits": true
    },
    "ignoreChanges": [
      "**/*.md"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "fix": "lerna run fix",
    "commit": "git-cz",
    "nuke": "yarn clean && yarn bootstrap",
    "tsc-check": "yarn workspaces run tsc-check",
    "u": "yarn upgrade-interactive --latest",
    "---------------------------------------------------------------------- LINE ----": "----",
    "versionup": "lerna version --conventional-commits --no-git-tag-version",
    "versionup:patch": "lerna version patch --conventional-commits --no-git-tag-version",
    "versionup:minor": "lerna version minor --conventional-commits --no-git-tag-version",
    "versionup:major": "lerna version major --conventional-commits --no-git-tag-version",
    "postversionup": "npm run commit-version",
    "postversionup:patch": "npm run commit-version",
    "postversionup:minor": "npm run commit-version",
    "postversionup:major": "npm run commit-version",
    "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./lerna.json\").version'`\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/eslint": "6.8.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "^2.0.0",
    "@types/stylelint": "^9.10.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "codecov": "^3.6.5",
    "commitizen": "^4.0.5",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "4.0.0",
    "ts-jest": "25.4.0",
    "ts-node": "^8.9.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.8.0",
    "typescript": "3.8.3"
  }
}
